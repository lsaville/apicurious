<!DOCTYPE html>
<html>
  <head>
    <title>Apicurious</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if logged_in? %>
      <%= render partial: 'shared/post_navbar' %>
    <% else %>
      <%= render partial: 'shared/pre_navbar' %>
    <% end %>

    <%= yield %>
  </body>
</html>
